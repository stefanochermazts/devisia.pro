---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts
const allPosts = await getCollection('blogIt');
const slugFromId = (id: string) => id.replace(/^(it|en)\//, '');

// Sort posts by publication date (newest first)
const sortedPosts = allPosts.sort((a, b) => {
  return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime();
});

const formatDate = (date: Date | string): string => {
  const d = typeof date === 'string' ? new Date(date) : date;
  return d.toLocaleDateString('it-IT', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<Layout 
  title="Blog" 
  description="Approfondimenti, tutorial e aggiornamenti Devisia su tecnologia, sviluppo software e trasformazione digitale."
>
  <div class="blog-container">
    <header class="blog-header">
      <h1>Blog</h1>
      <p class="blog-intro">
        Approfondimenti, tutorial e aggiornamenti su tecnologia, sviluppo software e trasformazione digitale.
      </p>
    </header>
    
    {sortedPosts.length === 0 ? (
      <div class="no-posts">
        <p>Nessun articolo pubblicato. Torna presto!</p>
      </div>
    ) : (
      <div class="posts-grid">
        {sortedPosts.map((post) => (
          <article class="post-card">
            {post.data.heroImage && (
              <div class="post-image">
                <img src={post.data.heroImage} alt={post.data.title} loading="lazy" />
              </div>
            )}
            
            <div class="post-content">
              <div class="post-meta">
                <time datetime={post.data.pubDate.toString()}>
                  {formatDate(post.data.pubDate)}
                </time>
                <span class="post-author">by {post.data.author}</span>
              </div>
              
              <h2 class="post-title">
                <a href={`/blog/${slugFromId(post.id)}`}>{post.data.title}</a>
              </h2>
              
              <p class="post-description">{post.data.description}</p>
              
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="post-tags">
                  {post.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
              
              <a href={`/blog/${slugFromId(post.id)}`} class="read-more">
                Leggi â†’
              </a>
            </div>
          </article>
        ))}
      </div>
    )}
  </div>
</Layout>

<style>
  .blog-container {
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .blog-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .blog-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .blog-intro {
    font-size: 1.2rem;
    color: var(--color-text-light, #6b7280);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .no-posts {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--color-text-light, #6b7280);
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }
  
  .post-card {
    background: white;
    border: 1px solid var(--color-border, #e5e7eb);
    border-radius: 0.75rem;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  .post-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background-color: var(--color-bg-alt, #f9fafb);
  }
  
  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .post-content {
    padding: 1.5rem;
  }
  
  .post-meta {
    display: flex;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-light, #6b7280);
    margin-bottom: 0.75rem;
  }
  
  .post-author {
    font-weight: 500;
  }
  
  .post-title {
    margin: 0 0 0.75rem 0;
    font-size: 1.5rem;
    line-height: 1.3;
  }
  
  .post-title a {
    color: var(--color-text, #1f2937);
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .post-title a:hover {
    color: var(--color-primary, #2563eb);
  }
  
  .post-description {
    color: var(--color-text-light, #6b7280);
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  
  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: var(--color-bg-alt, #f9fafb);
    color: var(--color-primary, #2563eb);
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-weight: 500;
  }
  
  .read-more {
    color: var(--color-primary, #2563eb);
    text-decoration: none;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    transition: gap 0.2s;
  }
  
  .read-more:hover {
    gap: 0.5rem;
  }
  
  @media (max-width: 768px) {
    .blog-header h1 {
      font-size: 2rem;
    }
    
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
