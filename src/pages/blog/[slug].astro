---
import Layout from '../../layouts/Layout.astro';
import { getEntry, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { blogPostingJsonLd, breadcrumbListJsonLd } from '../../lib/seo/structuredData';
import { Image } from 'astro:assets';

const slug = Astro.params.slug;
if (!slug) {
  throw new Response(null, { status: 404, statusText: 'Not found' });
}

const entry: CollectionEntry<'blogIt'> | undefined = await getEntry('blogIt', `it/${slug}`);
if (!entry) {
  throw new Response(null, { status: 404, statusText: 'Not found' });
}

const { Content } = await render(entry);
const site = Astro.site ?? new URL('https://devisia.pro');
const pageUrl = new URL(`/blog/${slug}/`, site).toString();
const published =
  entry.data.pubDate instanceof Date ? entry.data.pubDate.toISOString() : new Date(entry.data.pubDate).toISOString();

const languageSwitchHref = entry.data.translationSlug 
  ? `/en/blog/${entry.data.translationSlug}`
  : undefined;

const breadcrumbs = breadcrumbListJsonLd({
  site,
  items: [
    { name: 'Home', url: '/' },
    { name: 'Blog', url: '/blog' },
    { name: entry.data.title, url: `/blog/${slug}` },
  ],
});

const blogPosting = blogPostingJsonLd({
  site,
  lang: 'it',
  url: pageUrl,
  headline: entry.data.title,
  description: entry.data.description,
  datePublished: published,
  authorName: entry.data.author,
  image: entry.data.heroImage,
});

const formatDate = (date: Date | string): string => {
  const d = typeof date === 'string' ? new Date(date) : date;
  return d.toLocaleDateString('it-IT', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<Layout 
  title={entry.data.title} 
  description={entry.data.description}
  heroImage={entry.data.heroImage}
  structuredData={[breadcrumbs, blogPosting]}
  languageSwitchHref={languageSwitchHref}
>
  <article class="blog-post">
    <header class="post-header">
      <div class="post-meta">
        <time datetime={entry.data.pubDate.toString()}>
          {formatDate(entry.data.pubDate)}
        </time>
        <span class="separator">·</span>
        <span class="post-author">di {entry.data.author}</span>
      </div>
      
      <h1 class="post-title">{entry.data.title}</h1>
      
      <p class="post-description">{entry.data.description}</p>
      
      {entry.data.tags && entry.data.tags.length > 0 && (
        <div class="post-tags">
          {entry.data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
      
      {entry.data.heroImage && (
        <div class="post-hero-image">
          <Image 
            src={entry.data.heroImage} 
            alt={entry.data.title} 
            width={800}
            height={400}
            widths={[320, 480, 540, 640, 800, 1200]}
            sizes="(max-width: 48rem) 98vw, 90vw"
            loading="eager"
            decoding="async"
            fetchpriority="high"
          />
        </div>
      )}
    </header>
    
    <div class="post-content">
      <Content />
    </div>
    
    <footer class="post-footer">
      <a href="/blog" class="back-link">← Torna al blog</a>
    </footer>
  </article>
</Layout>

<style>
  .blog-post {
    max-width: 98vw;
    margin: 0 auto;
  }
  
  @media (min-width: 48rem) {
    .blog-post {
      max-width: 90vw;
    }
  }
  
  .post-header {
    margin-bottom: 3rem;
  }
  
  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    color: var(--ds-color-text-muted);
    margin-bottom: 1rem;
  }
  
  .separator {
    color: var(--ds-color-border);
  }
  
  .post-author {
    font-weight: 500;
  }
  
  .post-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--ds-color-text);
  }
  
  .post-description {
    font-size: 1.2rem;
    color: var(--ds-color-text-muted);
    line-height: var(--ds-leading-relaxed);
    margin-bottom: 1.5rem;
  }
  
  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }
  
  .tag {
    display: inline-block;
    padding: 0.4rem 1rem;
    background-color: color-mix(in srgb, var(--ds-color-accent) 15%, var(--ds-color-surface-2));
    color: var(--ds-color-accent);
    border-radius: var(--ds-radius-1);
    font-size: 0.875rem;
    font-weight: 500;
    border: var(--ds-border-1) solid color-mix(in srgb, var(--ds-color-accent) 30%, var(--ds-color-border));
  }
  
  .post-hero-image {
    width: 100%;
    border-radius: var(--ds-radius-3);
    margin-bottom: 2rem;
    overflow: hidden;
  }
  
  .post-hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .post-content {
    font-size: 1.1rem;
    line-height: var(--ds-leading-relaxed);
    color: var(--ds-color-text);
  }
  
  .post-content :global(br) {
    display: none !important;
  }
  
  .blog-post .post-content :global(br) {
    display: none !important;
  }
  
  .post-content :global(h2) {
    font-size: 2rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--ds-color-text);
  }
  
  .post-content :global(h3) {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--ds-color-text);
  }
  
  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }
  
  .post-content :global(ul, ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  
  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }
  
  .post-content :global(pre) {
    background-color: var(--ds-color-surface-2);
    color: var(--ds-color-text);
    padding: 1.5rem;
    border-radius: var(--ds-radius-2);
    overflow-x: auto;
    margin-bottom: 1.5rem;
    border: var(--ds-border-1) solid var(--ds-color-border);
  }
  
  .post-content :global(code) {
    background-color: var(--ds-color-surface-2);
    color: var(--ds-color-text);
    padding: 0.2rem 0.4rem;
    border-radius: var(--ds-radius-1);
    font-size: 0.9em;
    font-family: var(--ds-font-mono);
  }
  
  .post-content :global(pre code) {
    background-color: transparent;
    padding: 0;
    color: inherit;
  }
  
  .post-content :global(blockquote) {
    border-left: var(--ds-border-2) solid var(--ds-color-accent);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--ds-color-text-muted);
  }
  
  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: var(--ds-border-1) solid var(--ds-color-border);
  }
  
  .back-link {
    color: var(--ds-color-accent);
    text-decoration: none;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: gap var(--ds-motion-base);
  }
  
  .back-link:hover {
    gap: 0.75rem;
  }
  
  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }
    
    .post-description {
      font-size: 1.1rem;
    }
    
    .post-content {
      font-size: 1rem;
    }
  }
</style>
