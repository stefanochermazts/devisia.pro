---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';
import { type CollectionEntry } from 'astro:content';

const servicesEntry: CollectionEntry<'pages'> | undefined = await getEntry('pages', 'services');

if (!servicesEntry) {
  return new Response('Services page content not found', { status: 404 });
}

const { data } = servicesEntry;
const { Content } = await servicesEntry.render();
---

<Layout title={data.title} description={data.description} heroImage={data.heroImage}>
  <article class="page-content">
    <Content />
  </article>
</Layout>

<style>
  .page-content {
    max-width: 800px;
    margin: 0 auto;
  }
</style>
