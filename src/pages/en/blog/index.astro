---
import Layout from '../../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { breadcrumbListJsonLd } from '../../../lib/seo/structuredData';

const allPosts = await getCollection('blogEn');
const slugFromId = (id: string) => id.replace(/^(it|en)\//, '');
const PAGE_SIZE = 8;

const sortedPosts = allPosts.sort((a, b) => {
  return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime();
});

const initialPosts = sortedPosts.slice(0, PAGE_SIZE);

const formatDate = (date: Date | string): string => {
  const d = typeof date === 'string' ? new Date(date) : date;
  return d.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

const site = Astro.site ?? new URL('https://devisia.pro');
const breadcrumbs = breadcrumbListJsonLd({
  site,
  items: [
    { name: 'Home', url: '/en/' },
    { name: 'Blog', url: '/en/blog' },
  ],
});
---

<Layout
  title="Blog"
  description="Insights, tutorials, and updates from Devisia about technology, software development, and digital transformation."
  lang="en"
  structuredData={[breadcrumbs]}
>
  <div class="blog-container">
    <header class="blog-header">
      <h1>Blog</h1>
      <p class="blog-intro">
        Insights, tutorials, and updates about technology, software development, and digital transformation.
      </p>
    </header>

    {sortedPosts.length === 0 ? (
      <div class="no-posts">
        <p>No blog posts yet. Check back soon!</p>
      </div>
    ) : (
      <>
        <div
          class="posts-grid"
          id="posts-grid"
          data-endpoint="/api/blog.json?lang=en"
          data-locale="en-US"
          data-url-prefix="/en/blog"
          data-read-more-label="Read more →"
          data-offset={initialPosts.length}
          data-total={sortedPosts.length}
          data-page-size={PAGE_SIZE}
        >
          {initialPosts.map((post) => (
            <article class="post-card">
              {post.data.heroImage && (
                <div class="post-image">
                  <img src={post.data.heroImage} alt={post.data.title} loading="lazy" />
                </div>
              )}

              <div class="post-content">
                <div class="post-meta">
                  <time datetime={post.data.pubDate.toString()}>{formatDate(post.data.pubDate)}</time>
                  <span class="post-author">by {post.data.author}</span>
                </div>

                <h2 class="post-title">
                  <a href={`/en/blog/${slugFromId(post.id)}`}>{post.data.title}</a>
                </h2>

                <p class="post-description">{post.data.description}</p>

                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="post-tags">
                    {post.data.tags.map((tag: string) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}

                <a href={`/en/blog/${slugFromId(post.id)}`} class="read-more">
                  Read more →
                </a>
              </div>
            </article>
          ))}
        </div>

        {sortedPosts.length > PAGE_SIZE && (
          <div class="load-more-wrap" aria-label="Loading blog posts">
            <p id="posts-status" class="load-status" aria-live="polite"></p>
            <button id="load-more" class="load-more" type="button">
              Load more
            </button>
            <div id="posts-sentinel" class="load-sentinel" aria-hidden="true"></div>
          </div>
        )}
      </>
    )}

    <section class="page-intro" aria-label="Blog introduction">
      <details class="intro-details">
        <summary class="intro-summary">
          <span class="intro-summary-title">What you’ll find here</span>
          <svg class="intro-chevron" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <polyline points="6 9 12 15 18 9"></polyline>
          </svg>
        </summary>
        <div class="intro-body">
          <h2 class="intro-title">What you’ll find here</h2>
          <p class="intro-text">
            This blog is where we share how we approach software work in practice—from the first discovery session to a
            production release and continuous improvement. It’s not a feed of announcements: we aim for actionable notes,
            clear explanations, and reusable mental models. If you’re building a product, modernizing a legacy stack, or
            evaluating “build vs buy”, our goal is to help you make better decisions, avoid hidden costs, and ship with
            confidence.
          </p>
          <p class="intro-text">
            Topics include web and backend engineering, API integrations, automation, quality (testing, CI/CD,
            observability), security, and privacy (GDPR). When we talk about AI, we keep it grounded: define the job-to-be-done,
            measure value, implement guardrails, and make risk visible. If you’re working on AI features, you may also like
            our <a class="intro-link" href="/en/tools/ai-risk-checklist">AI Risk &amp; Privacy Checklist</a>.
          </p>

          <div class="intro-grid" role="list">
            <div class="intro-item" role="listitem">
              <h3 class="intro-item-title">Who it’s for</h3>
              <p class="intro-item-text">
                Founders, product owners, and engineering teams who need clarity: what to prioritize, how to validate
                assumptions, how to manage complexity, and what “good” looks like when you’re choosing architecture or a vendor.
              </p>
            </div>
            <div class="intro-item" role="listitem">
              <h3 class="intro-item-title">How to use it</h3>
              <p class="intro-item-text">
                Each article answers a real question and ends with practical takeaways you can apply immediately. If you want
                to discuss your context, feel free to <a class="intro-link" href="/en/contact">reach out</a>.
              </p>
            </div>
            <div class="intro-item" role="listitem">
              <h3 class="intro-item-title">Recurring themes</h3>
              <ul class="intro-list">
                <li><strong>Architecture</strong>: evolvable choices that keep options open.</li>
                <li><strong>Quality</strong>: tests, reviews, CI/CD and sustainable delivery.</li>
                <li><strong>Responsible AI</strong>: privacy, logging, policy checks, and governance.</li>
                <li><strong>Outcomes</strong>: small releases, fast feedback, measurable impact.</li>
              </ul>
            </div>
            <div class="intro-item" role="listitem">
              <h3 class="intro-item-title">Quick FAQ</h3>
              <p class="intro-item-text">
                <strong>How often do you publish?</strong> We prefer usefulness over cadence—new posts appear when we have something
                genuinely valuable (a pattern, a checklist, a guide).
              </p>
              <p class="intro-item-text">
                <strong>Can I suggest a topic?</strong> Yes. Tell us what you’re trying to achieve and what constraints you have.
                We’ll either turn it into a post or answer you directly.
              </p>
            </div>
          </div>

          <p class="intro-text intro-cta">
            Want to explore what we’re building? Visit <a class="intro-link" href="/en/projects">Projects</a> for products,
            experiments, and active initiatives.
          </p>
        </div>
      </details>
    </section>
  </div>
</Layout>

<style is:global>
  .blog-container {
    max-width: 98vw;
    margin: 0 auto;
  }

  @media (min-width: 48rem) {
    .blog-container {
      max-width: 90vw;
    }
  }

  .blog-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .blog-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .blog-intro {
    font-size: 1.2rem;
    color: var(--ds-color-text-muted);
    max-width: 98vw;
    margin: 0 auto;
  }

  .page-intro {
    margin: 2.5rem auto 0;
    max-width: 98vw;
  }

  @media (min-width: 48rem) {
    .blog-intro,
    .page-intro {
      max-width: 90vw;
    }
  }

  .intro-details {
    background: var(--ds-color-surface);
    border: var(--ds-border-1) solid var(--ds-color-border);
    border-radius: var(--ds-radius-3);
    padding: var(--ds-space-4);
  }

  .intro-details[open] {
    padding: var(--ds-space-6);
  }

  .intro-summary {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--ds-space-4);
    cursor: pointer;
    list-style: none;
  }

  .intro-summary-title {
    font-weight: 700;
    color: var(--ds-color-text);
    font-size: var(--ds-text-lg);
  }

  .intro-summary::-webkit-details-marker {
    display: none;
  }

  .intro-summary:focus-visible {
    outline: none;
    box-shadow: var(--ds-focus-ring);
    border-radius: var(--ds-radius-2);
  }

  .intro-chevron {
    color: var(--ds-color-text-muted);
    flex: 0 0 auto;
    transition: transform var(--ds-motion-base) var(--ds-ease-standard);
  }

  .intro-details[open] .intro-chevron {
    transform: rotate(180deg);
  }

  .intro-body {
    margin-top: var(--ds-space-4);
  }

  .intro-title {
    margin: 0;
    color: var(--ds-color-text);
    font-size: var(--ds-text-xl);
    font-weight: 700;
  }

  .intro-text {
    margin: 0 0 var(--ds-space-3);
    color: var(--ds-color-text);
    line-height: var(--ds-leading-relaxed);
  }

  .intro-cta {
    margin-top: var(--ds-space-4);
    color: var(--ds-color-text-muted);
  }

  .intro-link {
    color: var(--ds-color-accent);
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .intro-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--ds-space-5);
    margin: var(--ds-space-5) 0 var(--ds-space-4);
  }

  .intro-item {
    background: var(--ds-color-surface-2);
    border: var(--ds-border-1) solid var(--ds-color-border);
    border-radius: var(--ds-radius-2);
    padding: var(--ds-space-4);
  }

  .intro-item-title {
    margin: 0 0 var(--ds-space-2);
    color: var(--ds-color-text);
    font-size: var(--ds-text-md);
    font-weight: 700;
  }

  .intro-item-text {
    margin: 0 0 var(--ds-space-2);
    color: var(--ds-color-text-muted);
    line-height: var(--ds-leading-relaxed);
  }

  .intro-list {
    margin: 0;
    padding-left: 1.15rem;
    color: var(--ds-color-text-muted);
    line-height: var(--ds-leading-relaxed);
  }

  .intro-list li + li {
    margin-top: 0.35rem;
  }

  @media (max-width: 768px) {
    .intro-details {
      padding: var(--ds-space-4);
    }

    .intro-details[open] {
      padding: var(--ds-space-5);
    }

    .intro-grid {
      grid-template-columns: 1fr;
    }
  }

  .no-posts {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--ds-color-text-muted);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  .load-more-wrap {
    margin-top: 1.75rem;
    display: grid;
    place-items: center;
    gap: 0.75rem;
  }

  .load-status {
    margin: 0;
    color: var(--ds-color-text-muted);
    min-height: 1.25rem;
  }

  .load-more {
    appearance: none;
    border: var(--ds-border-1) solid var(--ds-color-border);
    background: var(--ds-color-surface);
    color: var(--ds-color-text);
    padding: 0.75rem 1rem;
    border-radius: var(--ds-radius-2);
    font-weight: 600;
    cursor: pointer;
    transition: transform var(--ds-motion-base), box-shadow var(--ds-motion-base);
  }

  .load-more:hover {
    transform: translateY(-1px);
    box-shadow: var(--ds-shadow-1);
  }

  .load-more:focus-visible {
    outline: none;
    box-shadow: var(--ds-focus-ring);
  }

  .load-more[disabled] {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }

  .load-sentinel {
    width: 100%;
    height: 1px;
  }

  .post-card {
    background: var(--ds-color-surface);
    border: var(--ds-border-1) solid var(--ds-color-border);
    border-radius: var(--ds-radius-3);
    overflow: hidden;
    transition: transform var(--ds-motion-base), box-shadow var(--ds-motion-base);
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--ds-shadow-2);
  }

  .post-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background-color: var(--ds-color-surface-2);
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    padding: 1.5rem;
  }

  .post-meta {
    display: flex;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--ds-color-text-muted);
    margin-bottom: 0.75rem;
  }

  .post-author {
    font-weight: 500;
  }

  .post-title {
    margin: 0 0 0.75rem 0;
    font-size: 1.5rem;
    line-height: 1.3;
  }

  .post-title a {
    color: var(--ds-color-text);
    text-decoration: none;
    transition: color var(--ds-motion-base);
  }

  .post-title a:hover {
    color: var(--ds-color-accent);
  }

  .post-description {
    color: var(--ds-color-text-muted);
    margin-bottom: 1rem;
    line-height: var(--ds-leading-relaxed);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: color-mix(in srgb, var(--ds-color-accent) 15%, var(--ds-color-surface-2));
    color: var(--ds-color-accent);
    border-radius: var(--ds-radius-1);
    font-size: 0.875rem;
    font-weight: 500;
    border: var(--ds-border-1) solid color-mix(in srgb, var(--ds-color-accent) 30%, var(--ds-color-border));
  }

  .read-more {
    color: var(--ds-color-accent);
    text-decoration: none;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    transition: gap var(--ds-motion-base);
  }

  .read-more:hover {
    gap: 0.5rem;
  }

  @media (max-width: 768px) {
    .blog-header h1 {
      font-size: 2rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script is:inline>
  (() => {
    const grid = document.getElementById('posts-grid');
    if (!grid) return;

    const endpointBase = grid.dataset.endpoint;
    const locale = grid.dataset.locale || 'en-US';
    const urlPrefix = grid.dataset.urlPrefix || '/en/blog';
    const readMoreLabel = grid.dataset.readMoreLabel || 'Read more →';

    const statusEl = document.getElementById('posts-status');
    const buttonEl = document.getElementById('load-more');
    const sentinelEl = document.getElementById('posts-sentinel');

    const pageSize = Number.parseInt(grid.dataset.pageSize || '8', 10) || 8;
    const total = Number.parseInt(grid.dataset.total || '0', 10) || 0;
    let offset = Number.parseInt(grid.dataset.offset || '0', 10) || 0;

    if (!endpointBase || !buttonEl || !sentinelEl || total <= offset) {
      if (buttonEl) buttonEl.hidden = true;
      if (sentinelEl) sentinelEl.hidden = true;
      return;
    }

    const dateFormatter = new Intl.DateTimeFormat(locale, {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    });

    const setStatus = (msg) => {
      if (!statusEl) return;
      statusEl.textContent = msg || '';
    };

    const mk = (tag, className) => {
      const el = document.createElement(tag);
      if (className) el.className = className;
      return el;
    };

    const renderPostCard = (post) => {
      const article = mk('article', 'post-card');

      if (post.heroImage) {
        const imgWrap = mk('div', 'post-image');
        const img = document.createElement('img');
        img.loading = 'lazy';
        img.src = post.heroImage;
        img.alt = post.title;
        imgWrap.appendChild(img);
        article.appendChild(imgWrap);
      }

      const content = mk('div', 'post-content');

      const meta = mk('div', 'post-meta');
      const time = document.createElement('time');
      time.dateTime = post.pubDate;
      time.textContent = dateFormatter.format(new Date(post.pubDate));
      meta.appendChild(time);

      const author = mk('span', 'post-author');
      author.textContent = `by ${post.author}`;
      meta.appendChild(author);
      content.appendChild(meta);

      const title = mk('h2', 'post-title');
      const link = document.createElement('a');
      link.href = `${urlPrefix}/${post.slug}`;
      link.textContent = post.title;
      title.appendChild(link);
      content.appendChild(title);

      const desc = mk('p', 'post-description');
      desc.textContent = post.description;
      content.appendChild(desc);

      if (Array.isArray(post.tags) && post.tags.length > 0) {
        const tagsWrap = mk('div', 'post-tags');
        for (const t of post.tags) {
          const tag = mk('span', 'tag');
          tag.textContent = String(t);
          tagsWrap.appendChild(tag);
        }
        content.appendChild(tagsWrap);
      }

      const readMore = document.createElement('a');
      readMore.href = `${urlPrefix}/${post.slug}`;
      readMore.className = 'read-more';
      readMore.textContent = readMoreLabel;
      content.appendChild(readMore);

      article.appendChild(content);
      return article;
    };

    let loading = false;
    let done = false;

    const loadMore = async () => {
      if (loading || done) return;
      loading = true;
      buttonEl.disabled = true;
      setStatus('Loading…');

      try {
        const res = await fetch(`${endpointBase}&offset=${offset}&limit=${pageSize}`, {
          headers: { Accept: 'application/json' },
        });
        if (!res.ok) throw new Error(`HTTP ${res.status}`);

        const data = await res.json();
        const posts = Array.isArray(data.posts) ? data.posts : [];

        for (const p of posts) {
          grid.appendChild(renderPostCard(p));
        }

        offset =
          Number.parseInt(String(data.nextOffset ?? offset + posts.length), 10) ||
          offset + posts.length;
        done = !data.hasMore || offset >= total || posts.length === 0;

        if (done) {
          setStatus('');
          buttonEl.hidden = true;
          sentinelEl.hidden = true;
        } else {
          setStatus('');
          buttonEl.disabled = false;
        }
      } catch (err) {
        // Keep the button as manual fallback.
        setStatus('Could not load more posts. Please try again.');
        buttonEl.disabled = false;
      } finally {
        loading = false;
      }
    };

    buttonEl.addEventListener('click', () => void loadMore());

    if ('IntersectionObserver' in window) {
      buttonEl.hidden = true;
      const io = new IntersectionObserver(
        (entries) => {
          for (const e of entries) {
            if (e.isIntersecting) void loadMore();
          }
        },
        { rootMargin: '600px 0px' }
      );
      io.observe(sentinelEl);
    }
  })();
</script>

