---
import Layout from '../../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { blogPostingJsonLd, breadcrumbListJsonLd } from '../../../lib/seo/structuredData';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blogEn');
  return blogEntries.map((entry) => ({
    params: { slug: entry.id.replace(/^(it|en)\//, '') },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'blogEn'>;
}

const { entry } = Astro.props;
const { Content } = await render(entry);
const slug = entry.id.replace(/^(it|en)\//, '');
const site = Astro.site ?? new URL('https://devisia.pro');
const pageUrl = new URL(`/en/blog/${slug}/`, site).toString();
const published =
  entry.data.pubDate instanceof Date ? entry.data.pubDate.toISOString() : new Date(entry.data.pubDate).toISOString();

const breadcrumbs = breadcrumbListJsonLd({
  site,
  items: [
    { name: 'Home', url: '/en/' },
    { name: 'Blog', url: '/en/blog' },
    { name: entry.data.title, url: `/en/blog/${slug}` },
  ],
});

const blogPosting = blogPostingJsonLd({
  site,
  lang: 'en',
  url: pageUrl,
  headline: entry.data.title,
  description: entry.data.description,
  datePublished: published,
  authorName: entry.data.author,
  image: entry.data.heroImage,
});

const formatDate = (date: Date | string): string => {
  const d = typeof date === 'string' ? new Date(date) : date;
  return d.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<Layout
  title={entry.data.title}
  description={entry.data.description}
  heroImage={entry.data.heroImage}
  lang="en"
  structuredData={[breadcrumbs, blogPosting]}
>
  <article class="blog-post">
    <header class="post-header">
      <div class="post-meta">
        <time datetime={entry.data.pubDate.toString()}>{formatDate(entry.data.pubDate)}</time>
        <span class="separator">·</span>
        <span class="post-author">by {entry.data.author}</span>
      </div>

      <h1 class="post-title">{entry.data.title}</h1>
      <p class="post-description">{entry.data.description}</p>

      {entry.data.tags && entry.data.tags.length > 0 && (
        <div class="post-tags">
          {entry.data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}

      {entry.data.heroImage && (
        <div class="post-hero-image">
          <img src={entry.data.heroImage} alt={entry.data.title} />
        </div>
      )}
    </header>

    <div class="post-content">
      <Content />
    </div>

    <footer class="post-footer">
      <a href="/en/blog" class="back-link">← Back to Blog</a>
    </footer>
  </article>
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: 3rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    color: var(--color-text-light, #6b7280);
    margin-bottom: 1rem;
  }

  .separator {
    color: var(--color-border, #e5e7eb);
  }

  .post-author {
    font-weight: 500;
  }

  .post-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--color-text, #1f2937);
  }

  .post-description {
    font-size: 1.2rem;
    color: var(--color-text-light, #6b7280);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .tag {
    display: inline-block;
    padding: 0.4rem 1rem;
    background-color: var(--color-bg-alt, #f9fafb);
    color: var(--color-primary, #2563eb);
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .post-hero-image {
    width: 100%;
    max-height: 400px;
    overflow: hidden;
    border-radius: 0.75rem;
    margin-bottom: 2rem;
  }

  .post-hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text, #1f2937);
  }

  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border, #e5e7eb);
  }

  .back-link {
    color: var(--color-primary, #2563eb);
    text-decoration: none;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: gap 0.2s;
  }

  .back-link:hover {
    gap: 0.75rem;
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }

    .post-description {
      font-size: 1.1rem;
    }

    .post-content {
      font-size: 1rem;
    }
  }
</style>

