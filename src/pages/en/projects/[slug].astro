---
import Layout from '../../../layouts/Layout.astro';
import { getEntry, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { breadcrumbListJsonLd, softwareApplicationJsonLd } from '../../../lib/seo/structuredData';

const slug = Astro.params.slug;
if (!slug) {
  throw new Response(null, { status: 404, statusText: 'Not found' });
}

const entry: CollectionEntry<'projectsEn'> | undefined = await getEntry('projectsEn', `en/${slug}`);
if (!entry) {
  throw new Response(null, { status: 404, statusText: 'Not found' });
}

const { Content } = await render(entry);

const ogImage = entry.data.ogImage ?? entry.data.coverImage ?? entry.data.logo;
const site = Astro.site ?? new URL('https://devisia.pro');
const pageUrl = new URL(`/en/projects/${slug}/`, site).toString();

const breadcrumbs = breadcrumbListJsonLd({
  site,
  items: [
    { name: 'Home', url: '/en/' },
    { name: 'Projects', url: '/en/projects' },
    { name: entry.data.title, url: `/en/projects/${slug}` },
  ],
});

const softwareApp = softwareApplicationJsonLd({
  site,
  lang: 'en',
  url: pageUrl,
  name: entry.data.title,
  description: entry.data.description,
  websiteUrl: entry.data.websiteUrl,
  image: ogImage,
  keywords: entry.data.tags ?? [],
});
---

<Layout
  title={`${entry.data.title} â€” Project`}
  description={entry.data.description}
  heroImage={ogImage}
  lang="en"
  structuredData={[breadcrumbs, softwareApp]}
>
  <article class="project">
    <header class="header">
      <div class="top">
        {entry.data.logo ? (
          <img class="logo" src={entry.data.logo} alt={`${entry.data.title} logo`} />
        ) : null}

        <div class="heading">
          <div class="title-row">
            <h1>{entry.data.title}</h1>
            <span class={`status status--${entry.data.status}`}>{entry.data.status}</span>
          </div>
          <p class="subtitle">{entry.data.description}</p>
          <div class="links">
            <a class="primary" href={entry.data.websiteUrl} target="_blank" rel="noopener noreferrer">
              Visit website
            </a>
            <a class="secondary" href="/en/projects">Back to projects</a>
          </div>
        </div>
      </div>

      {entry.data.coverImage ? (
        <div class="cover">
          <img src={entry.data.coverImage} alt={`${entry.data.title} cover`} loading="lazy" />
        </div>
      ) : null}

      {entry.data.tags?.length ? (
        <div class="tags">
          {entry.data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      ) : null}
    </header>

    <section class="content">
      <Content />
    </section>
  </article>
</Layout>

<style>
  .project {
    max-width: 900px;
    margin: 0 auto;
  }

  .header {
    margin-bottom: 2.5rem;
  }

  .top {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    margin-bottom: 1.25rem;
  }

  .logo {
    width: 56px;
    height: 56px;
    object-fit: contain;
    border-radius: 0.75rem;
    border: 1px solid var(--color-border, #e5e7eb);
    background: var(--color-bg-alt, #f9fafb);
    padding: 0.35rem;
    flex: 0 0 auto;
  }

  .heading {
    flex: 1;
    min-width: 0;
  }

  .title-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  h1 {
    margin: 0;
  }

  .subtitle {
    margin: 0 0 1rem 0;
    color: var(--color-text-light, #6b7280);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  .primary {
    background: var(--color-primary, #2563eb);
    color: #fff;
    border-radius: 0.5rem;
    padding: 0.6rem 0.9rem;
    text-decoration: none;
    font-weight: 700;
  }

  .primary:hover {
    background: var(--color-primary-dark, #1e40af);
  }

  .secondary {
    color: var(--color-primary, #2563eb);
    text-decoration: none;
    font-weight: 700;
  }

  .secondary:hover {
    text-decoration: underline;
  }

  .status {
    font-size: 0.8rem;
    font-weight: 700;
    padding: 0.25rem 0.6rem;
    border-radius: 999px;
    border: 1px solid var(--color-border, #e5e7eb);
    text-transform: uppercase;
    letter-spacing: 0.02em;
    white-space: nowrap;
  }
  .status--active {
    color: #065f46;
    background: #ecfdf5;
    border-color: #a7f3d0;
  }
  .status--beta {
    color: #1e40af;
    background: #eff6ff;
    border-color: #bfdbfe;
  }
  .status--archived {
    color: #374151;
    background: #f3f4f6;
    border-color: #e5e7eb;
  }

  .cover {
    width: 100%;
    height: 320px;
    overflow: hidden;
    border-radius: 0.9rem;
    border: 1px solid var(--color-border, #e5e7eb);
    background: var(--color-bg-alt, #f9fafb);
  }

  .cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: color-mix(in srgb, var(--ds-color-accent) 15%, var(--ds-color-surface-2));
    color: var(--ds-color-accent);
    border-radius: var(--ds-radius-1);
    font-size: 0.875rem;
    font-weight: 500;
    border: var(--ds-border-1) solid color-mix(in srgb, var(--ds-color-accent) 30%, var(--ds-color-border));
  }

  .content {
    font-size: 1.05rem;
    line-height: 1.85;
  }

  @media (max-width: 768px) {
    .top {
      flex-direction: column;
    }
    .cover {
      height: 220px;
    }
  }
</style>

