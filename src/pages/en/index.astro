---
import Layout from '../../layouts/Layout.astro';
import { getEntry, render } from 'astro:content';
import { type CollectionEntry } from 'astro:content';

const homeEntry: CollectionEntry<'pagesEn'> | undefined = await getEntry('pagesEn', 'home');

if (!homeEntry) {
  return new Response('Home page content not found', { status: 404 });
}

const { data } = homeEntry;
const { Content } = await render(homeEntry);
---

<Layout title={data.title} description={data.description} heroImage={data.heroImage} lang="en">
  <article class="page-content">
    <Content />
  </article>
</Layout>

<style>
  .page-content {
    max-width: 800px;
    margin: 0 auto;
  }
</style>

