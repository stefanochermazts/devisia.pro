---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const entries = await getCollection('projects');
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'projects'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const ogImage = entry.data.ogImage ?? entry.data.coverImage ?? entry.data.logo;
---

<Layout title={entry.data.title} description={entry.data.description} heroImage={ogImage}>
  <article class="project">
    <header class="header">
      <div class="top">
        {entry.data.logo ? (
          <img class="logo" src={entry.data.logo} alt={`${entry.data.title} logo`} />
        ) : null}

        <div class="heading">
          <div class="title-row">
            <h1>{entry.data.title}</h1>
            <span class={`status status--${entry.data.status}`}>{entry.data.status}</span>
          </div>
          <p class="subtitle">{entry.data.description}</p>
          <div class="links">
            <a class="primary" href={entry.data.websiteUrl} target="_blank" rel="noopener noreferrer">
              Visit website
            </a>
            <a class="secondary" href="/projects">Back to projects</a>
          </div>
        </div>
      </div>

      {entry.data.coverImage ? (
        <div class="cover">
          <img src={entry.data.coverImage} alt={`${entry.data.title} cover`} loading="lazy" />
        </div>
      ) : null}

      {entry.data.tags?.length ? (
        <div class="tags">
          {entry.data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      ) : null}
    </header>

    <section class="content">
      <Content />
    </section>
  </article>
</Layout>

<style>
  .project {
    max-width: 900px;
    margin: 0 auto;
  }

  .header {
    margin-bottom: 2.5rem;
  }

  .top {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    margin-bottom: 1.25rem;
  }

  .logo {
    width: 56px;
    height: 56px;
    object-fit: contain;
    border-radius: 0.75rem;
    border: 1px solid var(--color-border, #e5e7eb);
    background: var(--color-bg-alt, #f9fafb);
    padding: 0.35rem;
    flex: 0 0 auto;
  }

  .heading {
    flex: 1;
    min-width: 0;
  }

  .title-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  h1 {
    margin: 0;
  }

  .subtitle {
    margin: 0 0 1rem 0;
    color: var(--color-text-light, #6b7280);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  .primary {
    background: var(--color-primary, #2563eb);
    color: #fff;
    border-radius: 0.5rem;
    padding: 0.6rem 0.9rem;
    text-decoration: none;
    font-weight: 700;
  }

  .primary:hover {
    background: var(--color-primary-dark, #1e40af);
  }

  .secondary {
    color: var(--color-primary, #2563eb);
    text-decoration: none;
    font-weight: 700;
  }

  .secondary:hover {
    text-decoration: underline;
  }

  .status {
    font-size: 0.8rem;
    font-weight: 700;
    padding: 0.25rem 0.6rem;
    border-radius: 999px;
    border: 1px solid var(--color-border, #e5e7eb);
    text-transform: uppercase;
    letter-spacing: 0.02em;
    white-space: nowrap;
  }
  .status--active {
    color: #065f46;
    background: #ecfdf5;
    border-color: #a7f3d0;
  }
  .status--beta {
    color: #1e40af;
    background: #eff6ff;
    border-color: #bfdbfe;
  }
  .status--archived {
    color: #374151;
    background: #f3f4f6;
    border-color: #e5e7eb;
  }

  .cover {
    width: 100%;
    height: 320px;
    overflow: hidden;
    border-radius: 0.9rem;
    border: 1px solid var(--color-border, #e5e7eb);
    background: var(--color-bg-alt, #f9fafb);
  }

  .cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: var(--color-bg-alt, #f9fafb);
    color: var(--color-primary, #2563eb);
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .content {
    font-size: 1.05rem;
    line-height: 1.85;
  }

  @media (max-width: 768px) {
    .top {
      flex-direction: column;
    }
    .cover {
      height: 220px;
    }
  }
</style>

