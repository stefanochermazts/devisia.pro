---
export interface Props {
  text: string;
  as?: 'span' | 'button';
  class?: string;
}

const { text, as = 'span', class: className } = Astro.props;
const Tag = as;
---

<span class={['ds-tooltip', className].filter(Boolean).join(' ')}>
  <Tag style="all: unset; cursor: help" tabindex={as === 'span' ? 0 : undefined}>
    <slot />
  </Tag>
  <span class="ds-tooltip__bubble" role="tooltip">{text}</span>
</span>

