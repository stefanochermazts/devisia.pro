---
export interface Props {
  id: string;
  name?: string;
  type?: string;
  label?: string;
  placeholder?: string;
  value?: string;
  required?: boolean;
  disabled?: boolean;
  hint?: string;
  error?: string;
  autocomplete?: string;
  class?: string;
}

const {
  id,
  name,
  type = 'text',
  label,
  placeholder,
  value,
  required = false,
  disabled = false,
  hint,
  error,
  autocomplete,
  class: className,
  ...rest
} = Astro.props;

const describedBy = [hint ? `${id}-hint` : null, error ? `${id}-error` : null].filter(Boolean).join(' ') || undefined;
---

<div class={['ds-field', className].filter(Boolean).join(' ')}>
  {label ? (
    <label class="ds-label" for={id}>
      {label}{required ? <span class="sr-only"> (required)</span> : null}
    </label>
  ) : null}

  <input
    id={id}
    name={name}
    type={type}
    class="ds-input"
    placeholder={placeholder}
    value={value}
    required={required}
    disabled={disabled}
    autocomplete={autocomplete}
    aria-invalid={error ? 'true' : undefined}
    aria-describedby={describedBy}
    {...rest}
  />

  {hint ? <p class="ds-hint" id={`${id}-hint`}>{hint}</p> : null}
  {error ? <p class="ds-hint" id={`${id}-error`} style={`color: var(--ds-color-danger);`}>{error}</p> : null}
</div>

