---
export interface Option {
  label: string;
  value: string;
  disabled?: boolean;
}

export interface Props {
  id: string;
  name?: string;
  label?: string;
  required?: boolean;
  disabled?: boolean;
  hint?: string;
  error?: string;
  value?: string;
  options: Option[];
  class?: string;
}

const {
  id,
  name,
  label,
  required = false,
  disabled = false,
  hint,
  error,
  value,
  options,
  class: className,
  ...rest
} = Astro.props;

const describedBy = [hint ? `${id}-hint` : null, error ? `${id}-error` : null].filter(Boolean).join(' ') || undefined;
---

<div class={['ds-field', className].filter(Boolean).join(' ')}>
  {label ? (
    <label class="ds-label" for={id}>
      {label}{required ? <span class="sr-only"> (required)</span> : null}
    </label>
  ) : null}

  <select
    id={id}
    name={name}
    class="ds-select"
    required={required}
    disabled={disabled}
    aria-invalid={error ? 'true' : undefined}
    aria-describedby={describedBy}
    {...rest}
  >
    {options.map((opt) => (
      <option value={opt.value} disabled={opt.disabled} selected={value === opt.value}>
        {opt.label}
      </option>
    ))}
  </select>

  {hint ? <p class="ds-hint" id={`${id}-hint`}>{hint}</p> : null}
  {error ? <p class="ds-hint" id={`${id}-error`} style={`color: var(--ds-color-danger);`}>{error}</p> : null}
</div>

